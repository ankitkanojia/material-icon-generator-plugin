<idea-plugin>
    <id>com.github.dhaval2404.material_icon_generator</id>
    <name>Android Material Icon Generator</name>
    <version>1.0</version>
    <vendor email="dhavalpatel244@gmail.com"
            url="https://github.com/konifar/android-material-design-icon-generator-plugin">Android
        Material Icon Generator
    </vendor>
    <description><![CDATA[
      Android Studio & IntelliJ Plugin for Material Design Icon.<br> This plugin help you to set material icon in your app resources.
      Its clone of https://github.com/konifar/android-material-design-icon-generator-plugin.
    ]]></description>

    <change-notes><![CDATA[
      1.0: First version released with Theme(Fill/Outline/Round/TwoTone/Sharp) support<br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="MaterialIconGeneratorAction"
                class="com.github.dhaval2404.material_icon_generator.MaterialIconGeneratorAction"
                text="Material Icon Generator 2" description="Add Material Icon to your app resources"
                icon="/menu_icon.png">
            <add-to-group group-id="NewGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt P"/>
        </action>
    </actions>

</idea-plugin>